<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_arcProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="136dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="15dp"
        android:text="弧形进度条" />

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_arcProgressBar"
        android:layout_alignStart="@+id/btn_arcProgressBar"
        android:layout_below="@+id/btn_arcProgressBar"
        android:layout_marginTop="23dp"
        android:text="轮播图" />

    <Button
        android:id="@+id/btn_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_banner"
        android:layout_alignRight="@+id/btn_banner"
        android:layout_below="@+id/btn_banner"
        android:layout_marginTop="33dp"
        android:text="WedView" />


</RelativeLayout>
